<!doctype html>
<html class="no-js" lang=""> 
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ElOkapi</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta property="og:url"   content="{{{data.currentUrl}}}" />
    <meta property="og:type"  content="website" />
    <meta property="og:description"  content="Por el Amor A Los Animales. Ãšnete Para Protegerlos." />
    <meta property="og:image:width" content="200" />
    <meta property="og:image:height" content="200" />
	{{#if isMainPage}}
        <meta property="og:title" content="{{{data.posts.results.0.title}}}" />
        <meta property="og:image" content="{{{data.posts.results.0.image.url}}}" />
	{{else}}
        <meta property="og:title" content="{{{data.post.title}}}" />
        <meta property="og:image" content="{{{data.post.image.url}}}" />
	{{/if}}
	
    <link rel="stylesheet" href="/styles/site.min.css">
    
    <link href="/images/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
</head>
<body class="body">
<header class="header" id="header">
    <div class="header-container">
        <div class="columns twelve">
            <div class="static-header">
                <div class="logo">
                    <a href="/">
                        <img class="only-desktop" data-src="/images/logo.png" alt="">
                        <img class="only-mobile" data-src="/images/logoformobile.svg" alt="">
                    </a>
                </div>
				
                <nav class="nav-collapse">
                    <ul>
						{{#each data.categories }}
                            <li>
                                <a href="{{categoryUrl key}}">
                                    <div class="nav-indicator"
                                         style="background-color:{{category.color}}"></div>
                                    <div>{{name}}</div>
                                </a>
                            </li>
						{{/each}}
                    </ul>
                    <div class="fb-like like-us-button"
                         data-href="https://www.facebook.com/pages/El-Okapi/807585516027249" data-layout="button_count"
                         data-width="147px" data-action="like" data-show-faces="false" data-share="false"></div>
                </nav>
            </div>
        </div>
        <div class="static-share-header">
            <div class="share-header-container">
                <div class="logo">
                    <a href="/">
                        <img class="only-desktop" data-src="/images/logo.png" alt="">
                        <img class="only-mobile" data-src="/images/logoformobile.svg" alt="">
                    </a>
                </div>

                <div class="sharebar">
                    <ul>
                        <li>
							{{#if isMainPage}}
                                <a href="" data-title="{{data.posts.results.0.title}}" data-imageurl="{{data.posts.results.0.image.url}}" class="share-button facebook"></a>
							{{else}}
                                <a href="" data-title="{{data.post.title}}" data-imageurl="{{{data.post.image.url}}}" class="share-button facebook"></a>
							{{/if}}
                        </li>
                        <li>
							{{#if isMainPage}}
                                <a href="whatsapp://send?text=ElOkapi.com :{{{currentUrl}}}"
                                   class="share-button whatsapp"></a>
							{{else}}
                                <a href="{{{data.post.whatsappLink}}}" class="share-button whatsapp"></a>
							{{/if}}
                            
                        </li>
                    </ul>
                </div>

            </div>

        </div>
    </div>
</header>
<div style="padding: 0px; margin:0px;">
	{{{body}}}
</div>

<footer id="footer" class="footer">
    <div id="fb-root"></div>
    <script async src='/js/script.js'></script>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600' rel='stylesheet' type='text/css'>

</footer>
</body>
</html>




